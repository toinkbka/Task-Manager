<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.androidfirewall.MainActivity" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_saveRule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/saverule"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_toggleFW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/enableFW"
            android:textSize="15sp" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#FADFFF" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp" >

        <ImageView
            android:layout_width="32dip"
            android:layout_height="wrap_content"
            android:src="@drawable/bag_off" />

        <ImageView
            android:layout_width="32dip"
            android:layout_height="wrap_content"
            android:src="@drawable/wf_off" />
    </TableRow>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
    <ListView
        android:id="@+id/list_apps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
    </ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"/>
    </LinearLayout>

</LinearLayout>